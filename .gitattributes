# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# Audio files (binary)
*.mp3 binary
*.wav binary
*.flac binary
*.m4a binary
*.mp4 binary
*.ogg binary

# Model files (binary)
*.pkl binary
*.joblib binary
*.h5 binary
